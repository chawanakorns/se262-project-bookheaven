<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="css/account-main.css" />
    <link rel="stylesheet" href="css/index.css" />
    <script src="https://kit.fontawesome.com/285cca5c8c.js" crossorigin="anonymous"></script>
    <title>Document</title>
</head>

<%- include('partials/navbar'); %>

    <div class="container-fluid row main d-flex justify-content-center align-items-center">
        <div>
            <a href="payment-main.html" class="path-mobile">
                <div class="d-flex profile-item">
                    <div class="d-flex justify-content-center align-items-center">
                        <i class="fa-solid fa-arrow-left fa-1sm"></i>
                    </div>
                    <div class="d-flex justify-content-center align-items-center">
                        <h6 class="path-mobile-item bold">Payment</h6>
                    </div>
                </div>
            </a>
        </div>
        <!-- main -->
        <div class="Title-Head">
            <h1>Payment</h1>
        </div>
        <!--About-->
        <div class="d-flex flex-wrap justify-content-center align-items-center">
            <div class="row payment-row">
                <h3>Add Payment method</h3>
                <!-- Small -->
                <div id="paymentInfo">
                    <div class="payment-popup box-right row" id="payment-item">
                        <div class="row">
                            <div class="col-sm-7 ">
                                <h4>Credit or Debit card</h4>
                                <p>Add credit or debit card</p>
                            </div>
                            <div class="col-sm-4 d-flex justify-content-center">
                                <img src="assets/logo-mastercard.png" alt="" width="auto" height="40px"
                                    class="payment-logo">
                                <img src="assets/logo-visa.png" alt="" width="auto" height="40px" class="payment-logo">
                            </div>
                            <div class="col-sm-12">
                                <a class="d-grid gap-2 btn btn-primary custom-btn edit-login-saveButton" href="add-Payment-Mobile.html"
                                    role="button" id="showBnt">Add credit or debit card</a>
                            </div>

                        </div>
                    </div>
                    <div class="payment-popup" id="paypal-box"> <!-- Unique ID added -->
                        <div class="row">
                            <div class="col-sm-7">
                                <h4>Paypal</h4>
                                <p>Add Paypal</p>
                            </div>
                            <div class="col-sm-4 d-flex justify-content-center align-items-center">
                                <img src="assets/logo-paypal.png" alt="" height="100px" class="paypal-icon">
                            </div>
                            <div class="col-sm-12" id="payment-mobile">
                                <a class="d-grid gap-2 btn btn-primary custom-btn edit-login-saveButton" href="#"
                                    role="button" id="showBnt">Link to Paypal Account</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
