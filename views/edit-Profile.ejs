<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet" href="css/account-main.css" />
  <link rel="stylesheet" href="css/index.css" />
  <script src="https://kit.fontawesome.com/285cca5c8c.js" crossorigin="anonymous"></script>
  <title>Document</title>
</head>

<%- include('partials/navbar'); %>

  <div class="container-fluid row main d-flex justify-content-center align-items-center">
    <div>
      <nav aria-label="breadcrumb" class="path-PC">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item">
            <a href="/account">Account</a>
          </li>
          <li class="breadcrumb-item">
            <a href="/profile">Profile</a>
          </li>
          <li class="breadcrumb-item active" aria-current="page">Edit Personal Information</li>
        </ol>
      </nav>
      
      <a href="/profile" class="path-mobile">
        <div class="d-flex profile-item">
          <div class="d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-arrow-left fa-1sm"></i>
          </div>
          <div class="d-flex justify-content-center align-items-center">
            <h6 class="path-mobile-item bold">Profile</h6>
          </div>
        </div>
      </a>
    </div>
    <!-- main -->
    <div class="Title-Head">
      <h1>Edit Personal Information</h1>
    </div>
    <!--About-->
    <form action="/profile_edit" method="POST">
      <div class="row d-flex">
        <div class="col-lg-9 col-md-9 vertical-line edit-information-box ">
            <div class="row">
              <div class="col-lg-6 editPage-item">
                <h6 class="profile-item">First Name </h6>
                <input type="text" class="input-box" name="first_name">
              </div>
              <div class="col-lg-6 editPage-item">
                <h6 class="profile-item">Last Name </h6>
                <input type="text" class="input-box" name="last_name">
              </div>
            </div>
            <div class="editPage-item">
              <h6 class="profile-item">Gender</h6>
              <select class="form-select input-box" aria-label="Default select example" name="gender">
                <option value="1">Male</option>
                <option value="2">Female</option>
                <option value="3">Unidentified</option>
              </select>
            </div>
            <div class="editPage-item">
              <h6 class="profile-item">Date of Birth</h6>
              <input type="date" id="birthday" name="birthday" class="input-box">
            </div>
            <div class="editPage-item">
              <h6 class="profile-item">Phone number</h6>
              <input type="tel" class="input-box" name="phone_number">
            </div>
        </div>
        <div class="col-lg-3 col-md-9" id="logo-edit-profile">
          <div class="row">
            <div class="col">
              <div class="d-flex justify-content-center align-items-center profile-icon-box">
                <i class="fa-regular fa-user fa-8x "></i>
              </div>
              <div class="mb-3 d-flex justify-content-center align-items-center profile-icon-box">
                <input class="form-control" type="file" id="formFile" name="profile_image">
              </div>
              <div class="profile-icon-box d-flex justify-content-center align-items-center">
                <p class="noti">support: .jpg, .jpeg, .png</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="d-grid gap-2 col-6 mx-auto edit-profile-saveButton ">
        <button class="btn btn-primary custom-btn" type="submit">Save</button> <!-- Change button type to submit -->
      </div>
    </form> <!-- Close form tag -->
  </div>

  <%- include('partials/footer'); %>
</body>

</html>