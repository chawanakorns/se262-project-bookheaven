<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="css/account-main.css" />
    <link rel="stylesheet" href="css/index.css" />
    <script src="https://kit.fontawesome.com/285cca5c8c.js" crossorigin="anonymous"></script>
    <title>Document</title>
</head>

<%- include('partials/navbar'); %>

    <div class="container-fluid row main d-flex justify-content-center align-items-center">
        <div>
            <nav aria-label="breadcrumb" class="path-PC">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item">
                        <a href="/account">Account</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Payment</li>
                </ol>
            </nav>

            <a href="/account" class="path-mobile">
                <div class="d-flex profile-item">
                    <div class="d-flex justify-content-center align-items-center">
                        <i class="fa-solid fa-arrow-left fa-1sm"></i>
                    </div>
                    <div class="d-flex justify-content-center align-items-center">
                        <h6 class="path-mobile-item bold">Account</h6>
                    </div>
                </div>
            </a>
        </div>
        <!-- main -->
        <div class="Title-Head">
            <h1>Payment</h1>
        </div>
        <!--About-->
        <div class="d-flex flex-wrap justify-content-center align-items-center">
            <div class="row payment-row">
                <h3>Card & account</h3>
                <!-- Small -->
                <div class="col-lg-2 payment-box-left">
                    <button type="button"
                        class="btn btn-outline-dark payment-box selected-button d-flex justify-content-center align-items-center"
                        onclick="restorePaymentInfo()">
                        <div class="col-lg-5 col-sm-4 d-flex justify-content-center align-items-center">
                            <img src="assets/mastercard.png" alt="" style="width: 120px;">
                        </div>
                        <div class="col-lg-8 col-sm-7 card-col">
                            <h4>Mastercard</h4>
                            <p>Debit card ending in 4321</p>
                            <div class="d-flex link-payment small">
                                <div class="">
                                    <a href="#" id="EditMobile">
                                        <h4>Edit</h4>
                                    </a>
                                </div>
                                <div class="link-payment-remove">
                                    <a href="#">
                                        <h4>Remove</h4>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </button>
                    <button type="button"
                        class="btn btn-outline-dark payment-box d-flex justify-content-center align-items-center"
                        onclick="changePaymentInfo()" id="addPaymentbtn">
                        <div class="col-lg-5 col-sm-4 d-flex justify-content-center align-itesms-center">
                            <div class="add-icon d-flex justify-content-center align-items-center">
                                <i class="fa-solid fa-plus fa-2x d-flex justify-content-center align-items-center"></i>
                            </div>
                        </div>
                        <div class="col-lg-8 col-sm-7 add-payment-text">
                            <p>Add payment method</p>
                        </div>
                    </button>
                    <h3 class="Gift-card-sec">Gift Card</h3>
                    <button type="button"
                        class="btn btn-outline-dark payment-box d-flex justify-content-center align-items-center"
                        onclick="ChangeToGift()" id="GiftCardbtn">
                        <div class="col-lg-5 col-sm-4 d-flex justify-content-center align-items-center">
                            <div class="d-flex justify-content-center align-items-center">
                                <i class="fa-solid fa-gift fa-5x "></i>
                            </div>
                        </div>
                        <div class="col-lg-8 col-sm-7 card-col">
                            <h4>Gift Card</h4>
                            <div class="d-flex">
                                <p>Balance: à¸¿</p>
                                <p>0.00</p>
                            </div>
                        </div>
                    </button>
                </div>
                <!-- Large -->
                <div class="col-lg-6 large">
                    <div id="paymentInfo">
                        <div class="payment-popup" id="payment-item">
                            <div class="col-lg-6 d-flex justify-content-center align-items-center">
                                <img src="assets/mastercard.png" alt="" style="width: 300px;">
                            </div>
                            <div class="col-lg-6 card-col">
                                <h4>Mastercard</h4>
                                <div>
                                    <div class="d-flex payment-description">
                                        <p>Debit card :</p>
                                        <p>1234 **** 1564 ****</p>
                                    </div>
                                    <div class="d-flex payment-description">
                                        <p>Name :</p>
                                        <p>John Doe</p>
                                    </div>
                                    <div class="d-flex payment-description">
                                        <p>Expired date :</p>
                                        <p>04/24</p>
                                    </div>
                                </div>
                                <div class="d-flex link-payment">
                                    <div class="">
                                        <a href="#" onclick="editPayment()">
                                            <h4>Edit</h4>
                                        </a>
                                    </div>
                                    <div class="link-payment-remove">
                                        <a href="#">
                                            <h4>Remove</h4>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer'); %>
        <script src="js/payment.js"></script>
        </body>

</html>